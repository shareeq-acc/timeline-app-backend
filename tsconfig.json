{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "src/shared/types"],
    "types": ["node", "express"]
  },
  "include": ["src/**/*", "src/shared/types/**/*"],
  "exclude": ["node_modules", "dist"]
}